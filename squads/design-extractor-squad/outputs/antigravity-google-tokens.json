{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$metadata": {
    "source": "https://antigravity.google/",
    "extractor": "Lens — design-extractor-squad",
    "builder": "Forge — design-extractor-squad",
    "date": "2026-02-24",
    "version": "1.0.0"
  },
  "color": {
    "$type": "color",
    "bg": {
      "primary":  { "$value": "#ffffff",  "$description": "Main background" },
      "surface":  { "$value": "#f8f9fa",  "$description": "Cards and secondary sections" },
      "elevated": { "$value": "#ffffff",  "$description": "Elevated surfaces (modals, dropdowns)" },
      "dark":     { "$value": "#202124",  "$description": "Dark background, footer, dark mode base" },
      "overlay":  { "$value": "rgba(32, 33, 36, 0.6)", "$description": "Modal overlay backdrop" }
    },
    "text": {
      "primary":    { "$value": "#202124", "$description": "Primary body and heading text" },
      "secondary":  { "$value": "#5f6368", "$description": "Subtext, captions, descriptions" },
      "tertiary":   { "$value": "#80868b", "$description": "Placeholder, hints" },
      "disabled":   { "$value": "#bdc1c6", "$description": "Disabled state text" },
      "on-dark":    { "$value": "#ffffff",  "$description": "Text on dark backgrounds" },
      "on-primary": { "$value": "#ffffff",  "$description": "Text on primary colored backgrounds" }
    },
    "accent": {
      "blue":         { "$value": "#4285f4", "$description": "Google Blue — primary brand" },
      "blue-dark":    { "$value": "#1967d2", "$description": "Google Blue hover/active" },
      "blue-light":   { "$value": "#d2e3fc", "$description": "Google Blue tint" },
      "green":        { "$value": "#34a853", "$description": "Google Green — success/secondary" },
      "green-dark":   { "$value": "#188038", "$description": "Google Green hover" },
      "yellow":       { "$value": "#fbbc04", "$description": "Google Yellow — warning/accent" },
      "yellow-dark":  { "$value": "#f29900", "$description": "Google Yellow hover" },
      "red":          { "$value": "#ea4335", "$description": "Google Red — error/destructive" },
      "red-dark":     { "$value": "#c5221f", "$description": "Google Red hover" }
    },
    "state": {
      "success":    { "$value": "#34a853" },
      "success-bg": { "$value": "#e6f4ea" },
      "warning":    { "$value": "#fbbc04" },
      "warning-bg": { "$value": "#fef7e0" },
      "error":      { "$value": "#ea4335" },
      "error-bg":   { "$value": "#fce8e6" },
      "info":       { "$value": "#4285f4" },
      "info-bg":    { "$value": "#e8f0fe" }
    },
    "border": {
      "subtle":  { "$value": "#f1f3f4" },
      "default": { "$value": "#e8eaed" },
      "strong":  { "$value": "#bdc1c6" },
      "focus":   { "$value": "#4285f4" }
    }
  },
  "typography": {
    "fontFamily": {
      "$type": "fontFamily",
      "base":  { "$value": ["Google Sans Flex", "Roboto", "system-ui", "sans-serif"] },
      "mono":  { "$value": ["Google Sans Code", "ui-monospace", "SFMono-Regular", "monospace"] },
      "icons": { "$value": ["Google Symbols"] }
    },
    "fontSize": {
      "$type": "dimension",
      "xs":   { "$value": "0.75rem",  "$description": "12px" },
      "sm":   { "$value": "0.875rem", "$description": "14px" },
      "base": { "$value": "1rem",     "$description": "16px" },
      "lg":   { "$value": "1.125rem", "$description": "18px" },
      "xl":   { "$value": "1.25rem",  "$description": "20px" },
      "2xl":  { "$value": "1.5rem",   "$description": "24px" },
      "3xl":  { "$value": "1.875rem", "$description": "30px" },
      "4xl":  { "$value": "2.25rem",  "$description": "36px" },
      "5xl":  { "$value": "3rem",     "$description": "48px" },
      "6xl":  { "$value": "3.75rem",  "$description": "60px" }
    },
    "fontWeight": {
      "$type": "fontWeight",
      "light":    { "$value": 300 },
      "regular":  { "$value": 400 },
      "medium":   { "$value": 500 },
      "semibold": { "$value": 600 },
      "bold":     { "$value": 700 }
    },
    "lineHeight": {
      "$type": "number",
      "tight":   { "$value": 1.25 },
      "snug":    { "$value": 1.375 },
      "normal":  { "$value": 1.5 },
      "relaxed": { "$value": 1.625 },
      "loose":   { "$value": 2 }
    }
  },
  "spacing": {
    "$type": "dimension",
    "1":  { "$value": "0.25rem", "$description": "4px — base unit" },
    "2":  { "$value": "0.5rem",  "$description": "8px" },
    "3":  { "$value": "0.75rem", "$description": "12px" },
    "4":  { "$value": "1rem",    "$description": "16px" },
    "5":  { "$value": "1.25rem", "$description": "20px" },
    "6":  { "$value": "1.5rem",  "$description": "24px" },
    "8":  { "$value": "2rem",    "$description": "32px" },
    "10": { "$value": "2.5rem",  "$description": "40px" },
    "12": { "$value": "3rem",    "$description": "48px" },
    "16": { "$value": "4rem",    "$description": "64px" },
    "20": { "$value": "5rem",    "$description": "80px" },
    "24": { "$value": "6rem",    "$description": "96px" }
  },
  "borderRadius": {
    "$type": "dimension",
    "none": { "$value": "0" },
    "sm":   { "$value": "4px" },
    "md":   { "$value": "8px" },
    "lg":   { "$value": "12px" },
    "xl":   { "$value": "16px" },
    "2xl":  { "$value": "24px" },
    "3xl":  { "$value": "32px" },
    "full": { "$value": "9999px" }
  },
  "shadow": {
    "$type": "shadow",
    "none": { "$value": "none" },
    "sm": {
      "$value": [
        { "color": "rgba(60,64,67,0.30)", "offsetX": "0", "offsetY": "1px", "blur": "2px", "spread": "0" },
        { "color": "rgba(60,64,67,0.15)", "offsetX": "0", "offsetY": "1px", "blur": "3px", "spread": "1px" }
      ]
    },
    "md": {
      "$value": [
        { "color": "rgba(60,64,67,0.15)", "offsetX": "0", "offsetY": "2px", "blur": "6px", "spread": "2px" },
        { "color": "rgba(60,64,67,0.30)", "offsetX": "0", "offsetY": "1px", "blur": "2px", "spread": "0" }
      ]
    },
    "lg": {
      "$value": [
        { "color": "rgba(60,64,67,0.15)", "offsetX": "0", "offsetY": "4px", "blur": "8px", "spread": "3px" },
        { "color": "rgba(60,64,67,0.30)", "offsetX": "0", "offsetY": "1px", "blur": "3px", "spread": "0" }
      ]
    }
  },
  "transition": {
    "fast":   { "$value": "150ms ease",  "$type": "duration" },
    "base":   { "$value": "250ms ease",  "$type": "duration" },
    "slow":   { "$value": "350ms ease",  "$type": "duration" },
    "spring": { "$value": "350ms cubic-bezier(0.34, 1.56, 0.64, 1)", "$type": "duration" }
  }
}
